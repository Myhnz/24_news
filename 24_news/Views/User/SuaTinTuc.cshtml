@model _24_news.Models.TINTUC

@{
    ViewBag.Title = "SuaTinTuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN TIN TỨC</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaTinTuc)

        <div class="form-group">
            @Html.LabelFor(model => model.TenTinTuc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px">@Model.MaTinTuc</div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChiTiet, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="ChiTiet">@Model.ChiTiet</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnhBia, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="fileupload" />
                <img src="@Url.Content("~/Images/anhBiaTinTuc/" + Model.AnhBia)" width="120px" /> (Ảnh hiện tại)
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayCapNhat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayCapNhat)
                @Html.ValidationMessageFor(model => model.NgayCapNhat)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaCD, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaCD")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "TinTuc")
</div>
