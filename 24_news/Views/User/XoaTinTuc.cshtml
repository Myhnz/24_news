@model _24_news.Models.TINTUC

@{
    ViewBag.Title = "XoaTinTuc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN TIN TỨC CẦN XÓA</h2>

<h3>Bạn quyết định xóa tin này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên tin tức:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenTinTuc)
        </dd>

        <dt>
            Chi tiết:
        </dt>

        <dd style="width: 600px; text-align: justify">
            @Html.DisplayFor(model => model.ChiTiet)
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img src="@Url.Content("~/Images/anhBiaTinTuc/" + Model.AnhBia)" width="120px" />
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
        </dd>

        <dt>
            Chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CHUDE.MaCD)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "TinTuc")
        </div>
    }
</div>
